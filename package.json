{
    // Project metadata
    "name": "hotwallet",
    "version": "1.0.0",
    "description": "HotWallet - A TypeScript implementation",
    "main": "dist/index.js",
    
    // Scripts for building, running, testing, and cleaning the project
    "scripts": {
        // Compile TypeScript to JavaScript
        "build": "tsc",
        
        // Run the compiled JavaScript
        "start": "node dist/index.js",
        
        // Run the TypeScript source code in development mode
        "dev": "ts-node src/index.ts",
        
        // Run unit tests
        "test": "jest",
        
        // Clean the compiled JavaScript directory
        "clean": "rm -rf dist"
    },
    
    // Project author and license information
    "author": {
        "name": "mpermar082"
    },
    "license": "MIT",
    
    // Project dependencies
    "dependencies": {
        // Command-line argument parser
        "minimist": "^1.2.0"
    },
    
    // Project development dependencies
    "devDependencies": {
        // TypeScript compiler
        "typescript": "^5.0.0",
        
        // TypeScript definitions for Node.js
        "@types/node": "^18.0.0",
        
        // TypeScript definitions for minimist
        "@types/minimist": "^1.2.0",
        
        // TypeScript execution environment
        "ts-node": "^10.0.0",
        
        // Unit testing framework
        "jest": "^29.0.0",
        
        // TypeScript definitions for Jest
        "@types/jest": "^29.0.0"
    }
}